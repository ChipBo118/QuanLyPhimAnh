<?xml version="1.0" encoding="utf-8"?>
<!-- Animation cho hiệu ứng trượt vào từ phải sang trái -->
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Hiệu ứng di chuyển ngang -->
    <!-- Thời gian thực hiện animation: 300ms -->
    <!-- Bắt đầu từ vị trí 100% bên phải màn hình -->
    <!-- Kết thúc tại vị trí 0% (vị trí gốc) -->
    <translate
        android:duration="300"
        android:fromXDelta="100%"
        android:toXDelta="0%" />

    <!-- Hiệu ứng mờ dần -->
    <!-- Thời gian thực hiện animation: 300ms -->
    <!-- Bắt đầu với độ trong suốt 0% -->
    <!-- Kết thúc với độ trong suốt 100% -->
    <alpha
        android:duration="300"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
</set>