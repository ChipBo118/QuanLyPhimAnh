<?xml version="1.0" encoding="utf-8"?>
<!-- Animation cho hiệu ứng trượt ra từ trái sang phải -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hiệu ứng di chuyển ngang -->
    <!-- Thời gian thực hiện animation: 300ms -->
    <!-- Bắt đầu từ vị trí 0% (vị trí gốc) -->
    <!-- Kết thúc tại vị trí -100% bên trái màn hình -->
    <translate
        android:duration="300"
        android:fromXDelta="0%"
        android:toXDelta="-100%" />
    
    <!-- Hiệu ứng mờ dần -->
    <!-- Thời gian thực hiện animation: 300ms -->
    <!-- Bắt đầu với độ trong suốt 100% -->
    <!-- Kết thúc với độ trong suốt 0% -->
    <alpha
        android:duration="300"
        android:fromAlpha="1.0"
        android:toAlpha="0.0" />
</set> 